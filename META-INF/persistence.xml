<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit transaction-type="RESOURCE_LOCAL" name="hotel_system">
    <class>com.n4ims.hotelsystem.entities.AddressesEntity</class>
    <class>com.n4ims.hotelsystem.entities.CateringBookingsEntity</class>
    <class>com.n4ims.hotelsystem.entities.CateringTypesEntity</class>
    <class>com.n4ims.hotelsystem.entities.CleaningPersonnelEntity</class>
    <class>com.n4ims.hotelsystem.entities.CleaningTypeEntity</class>
    <class>com.n4ims.hotelsystem.entities.GuestsEntity</class>
    <class>com.n4ims.hotelsystem.entities.PackageBookingsEntity</class>
    <class>com.n4ims.hotelsystem.entities.PackageTypesEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomAmenitiesEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomBookingsEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomCleaningsEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomOccupationsEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomTypesEntity</class>
    <class>com.n4ims.hotelsystem.entities.RoomsEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.url" value="localhost:3306/hotel_system"/>

      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="admin1"/>
      <property name="hibernate.connection.url" value="jdbc:mariadb://localhost:3306"/>
      <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.password" value="admin1"/>
    </properties>
  </persistence-unit>
</persistence>
